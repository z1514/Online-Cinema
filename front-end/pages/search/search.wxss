/* pages/search/search.wxss */
/* fenlei */
.select_container{
  display: flex;
  /** 一行放不下时候换行，默认不换行，然后控件会进行缩放进一行内,因为
  flex-shrink默认为0，否则会溢出边框 */
  flex-flow: wrap;/** 一行放不下时进行换行 */
  justify-content: center;/** 设置子项目的水平排列方式 */
}

.fenlei{
  margin: 0 25rpx;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  width: 100px;
  justify-content: center;
  
}
.fenlei text{
  font-size: 30rpx;
  /* color: #999999; */
  color:black;
  font-weight: bold;
  margin-left: 15rpx;
}
/* 下拉框 */
.select_box {
  background: #fff;
  width: 620rpx;
  /* margin: 0 auto; */
  height: 90rpx;
  line-height: 90rpx;
  text-align: left;
  position: relative;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 86rpx;
  /* border: 1px solid #efefef; */
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.select_text {
  font-size: 28rpx;
  flex: 1;
  color: rgb(102, 102, 102);
  line-height: 86rpx;
  height: 86rpx;
}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 86rpx;
  width: 100%;
  /* border: 1px solid #efefef; */
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  z-index: 100;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  color: rgb(102, 102, 102);
}

/* 横着的分割View样式 */
/*分割线样式*/
.divLine{
  background: #E0E3DA;
  width: 100%;
  height: 5px;
 }

/*搜索结果*/
.favorite-film-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  height: 150px;
}

.favorite-film-cover {
  width: 107px;
  height: 150px;
  box-shadow: 10rpx 10rpx 30rpx rgba(0, 0, 0, .2);
}

.favorite-film-info {
  width: 360rpx;
}

.favorite-film-txt {
  margin-bottom: 15rpx;
  color: #666;
}

.favorite-film-title {
  font-size: 40rpx;
  color: #333;
}
