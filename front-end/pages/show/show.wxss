/* pages/show/show.wxss */

.main {
  padding: 10rpx;
  color: #666;
}

.text {
  margin-left: 5px;
  font-size: 15px;
  color: black;
  font-weight: normal;
}

.video-info {
  margin-top: auto;
  border-radius: 16px;
}

.video-info video {
  width: 100%;
}

.title {
  padding-left: 10rpx;
  margin-top: 5rpx;
  font-size: 16px;
  color: #333;
}


.video.title {
  display: flex;
  justify-content: space-between;
  font-size: 36rpx;
}

.video-detail {
  margin-top: 5rpx;
  font-size: 28rpx;
}

.video-detail text {
  margin-left: 12rpx;
}


.video-detail .title {
  font-size:20px;
  color:black;
  font-weight:bold;
  margin-left:0rpx;
  margin-top:0rpx;
}

.video-detail .other{
  font-size:16px;
  color:gray;
  margin-top: 10px;
  margin-bottom: 10px;
}

.video-detail .desc{
  font-size: 12px;
  color: black;
  margin-top: 5px;
  margin-left: 5px;
  text-align: justify;
}


.video-detail .author {
  color: #000;
}

.other-list {
  margin-top: 0rpx;
}

.item-other {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.other-img-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30%;
}

.other-img-wrap image {
  width: 90%;
  border-radius: 15rpx;
}

.other-info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width:80%;
}

.other-title {
  font-size: 30rpx;
  color: #e06f93;
}

.other-detail {
  padding-left: 20rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #666;
}
