page {
  color: #666;
  padding: auto;
}


.active {
  border-bottom: 5rpx solid #de688b;
}

.slides {
  margin-top:auto;
}

.slides swiper {
  border-radius: 16rpx;
  margin: 5px;
  height: 350px;
}

.slides navigator {
  width: 100%;
  height: 100%;
}

.slides image {
  width: 100%;
  height: 100%;
}

.text {
  margin-left: 5px;
  font-size: 15px;
  color: black;
  font-weight: normal;
}

.video-wrap {
  display: flex;
  flex-wrap: wrap;
  padding: 5px;
  justify-content: space-between;
}

.video-item {
  width: 48%;
  margin-bottom: 10px;
}

.video-img {
  position: relative;
}

.video-img-image {
  width: 100%;
  border-radius: 16rpx;
}

.video-img .video-info {
  display: flex;
  justify-content: space-around;
  position: absolute;
  left: 0;
  bottom: 8rpx;
  width: 100%;
  color: #fff;
  font-size: 20rpx;
}

.count-image{
  width: 24rpx;
  padding-right: 8rpx;
}

.video-title {
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
}

.page-section-spacing{
  margin-top: 60rpx;
}

.inline_box{
  display: inline-block;/*行内块级元素*/
  margin-right: 10px;
}